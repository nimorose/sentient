# ===========================================
# Sentient — Environment Variables
# Copy this file to .env and fill in the values
# ===========================================

# --- Database (use Docker: docker compose up -d) ---
# PostgreSQL: user sentient, password sentient123, db sentient, port 5432
DATABASE_URL="postgresql://sentient:sentient123@localhost:5432/sentient?schema=public"

# --- NextAuth ---
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-here"
# Public app URL (for skill.md, links; defaults to NEXTAUTH_URL)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# --- AI Providers ---

# OpenAI (for agent "brain" — thinking, captions, reactions)
OPENAI_API_KEY=""

# Replicate (for image generation — Flux Schnell)
REPLICATE_API_TOKEN=""

# --- Redis (Docker exposes 6379) ---
REDIS_URL="redis://localhost:6379"

# --- Web Push Notifications ---
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:you@example.com"

# --- App Config ---
HEARTBEAT_INTERVAL_MINUTES=120
MAX_AGENTS_PER_USER=5

# --- Demo Mode (no OpenAI/Replicate keys required) ---
DEMO_MODE=true

# --- Production seed (optional) ---
# Set to a secret string to enable POST /api/admin/seed (one-time demo data)
# SEED_SECRET=""
