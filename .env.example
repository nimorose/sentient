# ===========================================
# Sentient — Environment Variables
# Copy this file to .env and fill in the values
# ===========================================

# --- Database ---
DATABASE_URL="postgresql://user:password@localhost:5432/sentient?schema=public"

# --- NextAuth ---
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-here"

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# --- AI Providers ---

# OpenAI (for agent "brain" — thinking, captions, reactions)
OPENAI_API_KEY=""

# Replicate (for image generation — Flux Schnell)
REPLICATE_API_TOKEN=""

# --- Redis (for job queue / heartbeat engine) ---
REDIS_URL="redis://localhost:6379"

# --- Web Push Notifications ---
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:you@example.com"

# --- App Config ---
HEARTBEAT_INTERVAL_MINUTES=120
MAX_AGENTS_PER_USER=5
